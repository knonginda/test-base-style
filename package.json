{
  "name": "@bo/base-style",
  "version": "1.0.0",
  "description": "backoffice base style",
  "main": "./assets/design/combined.scss",
  "scripts": {
    "build": "concat ./assets/design/*.scss -o ./assets/design/combined.scss",
    "lint:stylelint": "stylelint --fix",
    "lint:prettier": "prettier --write --loglevel warn",
    "lint:all:stylelint": "npm run lint:stylelint \"design/**/*.{scss}\"",
    "lint:all:prettier": "npm run lint:prettier \"**/*.{json,css,scss,html,md}\"",
    "lint": "run-s lint:all:*"
  },
  "files": [
    "./assets/design/combined.scss",
    "./assets/fonts",
    "README.md"
  ],
  "devDependencies": {
    "concat": "1.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "sass-loader": "7.1.0",
    "stylelint": "9.10.1",
    "stylelint-config-css-modules": "1.3.0",
    "stylelint-config-prettier": "5.0.0",
    "stylelint-config-recess-order": "2.0.1",
    "stylelint-config-standard": "18.2.0",
    "stylelint-scss": "3.5.4"
  },
  "author": "Jett Liu",
  "license": "ISC",
  "keywords": [
    "backoffice base style",
    "applet-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/knonginda/test-base-style.git"
  }
}
